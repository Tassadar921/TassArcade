FROM node:24

# Create app directory
WORKDIR /app

# Accept the PORT build arg
ARG PORT

# Install pdf2pic system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends graphicsmagick ghostscript && rm -rf /var/lib/apt/lists/*

# Copy backend dependencies
COPY back/package*.json ./

# Install backend deps
RUN npm install --legacy-peer-deps

# Copy backend app code
COPY back /app

# Also copy root-level shared tools (optional)
COPY package*.json /shared/

# Permissions
RUN chown -R node:node /app

EXPOSE ${PORT}

USER node

CMD ["npm", "run", "dev"]
